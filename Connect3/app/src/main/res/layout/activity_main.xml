            android:layout_marginTop="30dp"
            android:layout_row="1"
            android:onClick="dropIn"
            android:tag="4"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="271dp" />

        <ImageView
            android:id="@+id/piece6"
